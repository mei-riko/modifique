                                        .preview-review__image(style="background-image:url('../demo/sale-1.png')")
                                        .preview-review__name Александра
                                        .preview-review__date 21.02.2020
        //- Форма
        section.pb-5.container
            .row
                .col-2
                    a.cta__arrow.scroll(href="#top")
                .col-6
                    p.h3.mb-2 Оставьте отзыв и получите  
                        span.text-italic 5% скидку 
                        | на следующую процедуру
                    .btn-group
                        .btn-group__item
                            a.btn.btn_secondary(href="#") Отзыв в WhatsApp
                        .btn-group__item
                            a.btn.btn_secondary(href="#") Отзыв в Instagram
                        .btn-group__item
                            a.btn.btn_secondary(href="#") Отзыв через сайт
        include chunks/footer.pug

        .modal.modal_review#review
            .preview-review.modal_review__preview
                .preview-review__info
                    .preview-review__image(style="background-image:url('../demo/sale-1.png')")
                    .preview-review__name Вероника
                    .preview-review__date 01.12.2020
